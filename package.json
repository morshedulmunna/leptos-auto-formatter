{
  "name": "leptos-auto-formatter",
  "displayName": "Leptos Auto Formatter",
  "description": "Format Leptos components using leptosfmt on save",
  "version": "1.0.0",
  "publisher": "MorshedulMunna",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "leptos",
    "rust",
    "formatter",
    "leptosfmt",
    "auto-format",
    "web-framework"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/morshedulmunna/leptos-auto-formatter"
  },
  "homepage": "https://github.com/morshedulmunna/leptos-auto-formatter",
  "bugs": {
    "url": "https://github.com/morshedulmunna/leptos-auto-formatter/issues"
  },
  "license": "MIT",
  "activationEvents": [
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Leptos Formatter",
      "properties": {
        "leptosFormatter.enableOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic formatting on save for Rust files"
        },
        "leptosFormatter.leptosfmtPath": {
          "type": "string",
          "default": "leptosfmt",
          "description": "Path to the leptosfmt executable. Use 'leptosfmt' if it's in your PATH"
        }
      }
    },
    "languages": [
      {
        "id": "rust",
        "extensions": [
          ".rs"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  }
}